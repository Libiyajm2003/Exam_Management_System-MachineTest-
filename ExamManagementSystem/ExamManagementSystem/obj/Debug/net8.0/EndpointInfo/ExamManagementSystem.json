  "components": {
    "schemas": {
      "CreateExamRequest": {
        "required": [
          "details",
          "examYear",
          "studentID"
        ],
        "type": "object",
        "properties": {
          "studentID": {
            "type": "integer",
            "format": "int32"
          },
          "examYear": {
            "maximum": 2100,
            "minimum": 2000,
            "type": "integer",
            "format": "int32"
          },
          "details": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExamDetailDto"
            }
          }
        },
        "additionalProperties": false
      },
      "ExamDetailDto": {
        "required": [
          "marks",
          "subjectID"
        ],
        "type": "object",
        "properties": {
          "subjectID": {
            "type": "integer",
            "format": "int32"
          },
          "marks": {
            "maximum": 100,
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "ExamDtls": {
        "required": [
          "marks",
          "masterID",
          "subjectID"
        ],
        "type": "object",
        "properties": {
          "dtlsID": {
            "type": "integer",
            "format": "int32"
          },
          "masterID": {
            "type": "integer",
            "format": "int32"
          },
          "subjectID": {
            "type": "integer",
            "format": "int32"
          },
          "subject": {
            "$ref": "#/components/schemas/SubjectMst"
          },
          "marks": {
            "maximum": 100,
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "ExamMaster": {
        "required": [
          "examYear",
          "passOrFail",
          "studentID"
        ],
        "type": "object",
        "properties": {
          "masterID": {
            "type": "integer",
            "format": "int32"
          },
          "studentID": {
            "type": "integer",
            "format": "int32"
          },
          "student": {
            "$ref": "#/components/schemas/StudentMst"
          },
          "examYear": {
            "maximum": 2100,
            "minimum": 2000,
            "type": "integer",
            "format": "int32"
          },
          "totalMark": {
            "type": "number",
            "format": "double"
          },
          "passOrFail": {
            "maxLength": 10,
            "minLength": 1,
            "type": "string"
          },
          "createTime": {
            "type": "string",
            "format": "date-time"
          },
          "details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ExamDtls"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StudentMst": {
        "required": [
          "mail",
          "studentName"
        ],
        "type": "object",
        "properties": {
          "studentID": {
            "type": "integer",
            "format": "int32"
          },
          "studentName": {
            "maxLength": 250,
            "minLength": 5,
            "type": "string"
          },
          "mail": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      "SubjectMst": {
        "required": [
          "subjectName"
        ],
        "type": "object",
        "properties": {
          "subjectID": {
            "type": "integer",
            "format": "int32"
          },
          "subjectName": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
